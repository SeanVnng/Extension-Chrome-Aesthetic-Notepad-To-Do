{
  "manifest_version": 3,
  "name": "Focus Tab - Dashboard Productif",
  "version": "1.0",
  "description": "Nouvel onglet minimaliste : Tâches, Notes, Météo et Objectifs.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "geolocation"
  ],
  "host_permissions": [
    "https://api.open-meteo.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}